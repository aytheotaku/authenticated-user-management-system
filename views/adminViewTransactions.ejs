<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ADMIN PORTAL</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <%- include('./partials/adminNavbar.ejs') %>



    <form class="text-center d-flex my-form-class  flex-column" action="" role="search" method="POST">
            <h1>VIEW TRANSACTIONS</h1>

            
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead >
              <tr>
             
                <th scope="col">Depositor Name</th>
                <th scope="col">Bank</th>
                <th scope="col">Amount</th>
                <th scope="col">Transaction Date</th>
                <th scope="col">Created By</th>
           
                <th></th>
              </tr>
            </thead>
            <tbody class="table-group-divider my-table-body">

               
                <% transactionsData.forEach(function(transaction){ %>
                    <tr>
                    <td scope="row"><%= transaction.depositor_name%></th>
                    <td scope="row"><%= transaction.bank%></th>
                    <td scope="row"><%= transaction.transaction_amount%></th>
                    <td scope="row"><%= transaction.transaction_date%></th>
                    <td scope="row"><%= transaction.createdBy%></th>
                    <td><a href="/admin/portal/delete-transaction/<%=transaction._id%>" style="color: red;">Delete Transaction</a</td>
                    </tr>
                    <%  }); %>

                
            </tbody>
          </table>
      </div>
      
           
        </form>
    
    
    
    
     <style>
        .my-form-class{
          width: 50%;
          margin: 0 auto;
          /* padding: 10px; */
        }
        .my-btn-class{
          width: 50%;
          margin: 0 auto;
        }
    
        .my-no{
          margin-right: 20px;
        }
    
    
     </style>




</div>
</div>









</body>

</html>