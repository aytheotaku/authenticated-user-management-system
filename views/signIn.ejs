<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <title>Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap" rel="stylesheet">
    

    <style>
        body{
            font-family: 'Montserrat', sans-serif;
        }
    </style>
<style>
html,
body {
  height: 100%;
}

body {
  display: flex;
  align-items: center;
  padding-top: 40px;
  padding-bottom: 40px;
  background-color: #f5f5f5;

}

.form-signin {
  max-width: 330px;
  padding: 15px;
}

.form-signin .form-floating:focus-within {
  z-index: 2;
}

.form-signin input[type="email"] {
  margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}

.form-signin input[type="password"] {
  margin-bottom: 10px;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}

     
    </style>

    
    <!-- Custom styles for the form -->
  </head>
  <body class="text-center">
    
<main class="form-signin w-100 m-auto">
  <form action="/signIn" method="POST">
   
    <h1 class="h3 mb-3 fw-normal">USER SIGN IN</h1>
    
  
    <%message.forEach(msg => { %>
      <% if(msg.length > 0 && (msg.includes('This user does not exist') || msg.includes('Wrong Password') || msg.includes('Please Sign In'))) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= msg %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
     <% } %>

     <% if(msg.length > 0 && msg.includes('User created successfully')) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= msg %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
   <% } %>
    
    <% });  %>



    <div class="form-floating">
      <input name="email" id="email" type="email" class="form-control" id="floatingPassword" placeholder="Email">
      <label for="floatingPassword">Email</label>
    </div>
    <div class="form-floating">
      <input name="password" id="password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
      <label for="floatingPassword">Password</label>
    </div>

    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign In</button>
  
    </p>
  </form>
  <p class="mt-5 mb-3 text-muted"> Don't have an account?
    <a href="/signUp"><button class="w-100 btn btn-lg btn-success">Sign Up</button></a>
</main>


    
<%- include('./partials/scripts.ejs') %>
  </body>
</html>


