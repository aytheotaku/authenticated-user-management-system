<body class="text-center">

<div class="container my-container-class mx-auto mt-3 mb-3">
    
    <h4 class="search-found">
        Transactions Found
    </h4>
    <a href="/transaction-search"><button class="btn btn-primary">GO BACK</button></a>

 <style>

    .my-container-class{
      width: 50%;
      margin: 0 auto;
      padding: 10px;
    }
    .my-btn-class{
      width: 30%;
      margin: 0 auto;
    }

    .result-form{
      border: 1px solid black;
      width: 50%;
      margin: 0 auto;
      padding: 1rem;
    }
 </style>
      </div>
    
  
      <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead >
              <tr>
                <th scope="col">Depositor Name</th>
                <th scope="col">Bank</th>
                <th scope="col">Amount</th>
                <th scope="col">Transaction Date(YY-MM-DD) </th>
                <th scope="col">Registered By</th>
                <th scope="col">Registration Date</th>
               
              </tr>
            </thead>
            <tbody class="table-group-divider my-table-body">

              <% transactionData.forEach(function(element){%>
                <tr>
                  <th scope="row"> <%= element.depositor_name %>  </th>
                  <td> <%= element.bank %></td>
                  <td> <%= element.transaction_amount %></td>
                  <td> <%=element.transaction_date%></td>
                    <td></td>
                    <td> <%=element.createdAt%> </td>
                  </tr>
             <%  }); %> 
            </tbody>
          </table>
      </div>
      
